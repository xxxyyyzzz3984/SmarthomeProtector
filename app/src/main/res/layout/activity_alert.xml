<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGrey"
    tools:context="com.yinhaoxiao.smarthomeprotector.AlertActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/colorRed"
            android:text="@string/Alert_Title"
            />

        <TextView
            android:id="@+id/AlertActIPTV"
            android:layout_below="@id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="30dp"

            android:background="@drawable/textviewborder"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/AlertOPTV"
            android:layout_below="@id/AlertActIPTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:background="@drawable/textviewborder"
            android:textColor="@color/colorBlack"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/AllowBtn"
            android:layout_below="@id/AlertOPTV"
            android:layout_height="80dp"
            android:layout_width="130dp"
            android:layout_marginTop="30dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            fbutton:buttonColor="@color/fbutton_color_emerald"
            fbutton:shadowColor="@color/fbutton_color_nephritis"
            android:textColor="@color/fbutton_color_clouds"
            android:textSize="30dp"
            android:text="Allow"
            android:layout_marginLeft="30dp"
        />

        <info.hoang8f.widget.FButton
            android:id="@+id/DenyBtn"
            android:layout_below="@id/AlertOPTV"
            android:layout_height="80dp"
            android:layout_width="130dp"
            android:layout_marginTop="30dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            fbutton:buttonColor="@color/fbutton_color_alizarin"
            fbutton:shadowColor="@color/fbutton_color_pomegranate"
            android:textColor="@color/fbutton_color_clouds"
            android:textSize="30dp"
            android:text="DENY"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</ScrollView>
